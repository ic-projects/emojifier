extends layout

block content
  nav.navbar.navbar-default( role="navigation" )
    .navbar-header
      button.navbar-toggle.collapsed( type="button", data-toggle="collapse", data-target="#navbar-inverse", aria-expanded="false", aria-controls="navbar")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href="#")
        img(src="images/logo.png", "Logo", width="120", height="50")

    #navbar-inverse.collapse.navbar-collapse
      ul.nav.navbar-nav
        li.active: a( href="#") Home
        li: a(href="#database") Database
        li: a( href="#about" ) About

  div(class='container')
    img(src="images/logo.png", "Logo")

    form(action='/parse', method="post")
      div.input
        textarea(name="message", class="form-control", placeholder="Enter data to emojify" cols="40", rows="5")
      div.actions
        input(type="submit", value="add")

